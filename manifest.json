{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/shorts/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}